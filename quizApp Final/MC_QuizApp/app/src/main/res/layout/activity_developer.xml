<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.salmansaeed.mc_quizapp.DeveloperActivity">


    <Button
        android:id="@+id/developerButton"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_horizontal"
        android:text="Developers"
        android:textAlignment="center"
        android:textColor="#ffffff"


        android:textSize="35dp" />



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/button4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp"
        android:background="#01579B"
        android:textColor="#ffffff" />


    <TextView
        android:id="@+id/Person1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/developerButton"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-110dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:scrollbarSize="30dp"
        android:text="Salman Saeed"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/Person1Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/developerButton"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-142dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-light"
        android:inputType="textPersonName"
        android:scrollbarSize="30dp"
        android:text="bsef18m049@pucit.edu.pk"
        android:textSize="25dp" />


    <TextView
        android:id="@+id/Person2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Person1"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-79dp"
        android:ems="10"

        android:inputType="textPersonName"
        android:scrollbarSize="30dp"
        android:text="Zeeshan Khalid"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/Person2Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Person1Email"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-72dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-light"
        android:inputType="textPersonName"
        android:scrollbarSize="30dp"
        android:text="bsef18m005@pucit.edu.pk"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/Person3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Person2"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-88dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:scrollbarSize="30dp"
        android:text="Mehroz Rashid"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/Person3Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Person2Email"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-84dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-light"
        android:inputType="textPersonName"
        android:scrollbarSize="30dp"
        android:text="bsef18m050@pucit.edu.pk"
        android:textSize="25dp" />


</RelativeLayout>
